                            <b>Project | 03 Library Management System.</b>
                            <p>Currently working on Library Management System.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    {{> myFooter}}


    <script>
        var slideIndex = 1;
        showDivs(slideIndex, "notclicked");

        function plusDivs(n, clicked_id) {
            console.log(clicked_id)
            showDivs(slideIndex += n, clicked_id);
        }

        function showDivs(n, clicked_id) {
            var i;
            if (clicked_id === "firstSlide") {
                var x = document.getElementsByClassName("mySlides");
                if (n > x.length) { slideIndex = 1 }
                if (n < 1) { slideIndex = x.length }
                for (i = 0; i < x.length; i++) {
                    x[i].style.display = "none";
                }
                x[slideIndex - 1].style.display = "block";
            }

            if (clicked_id === "secondSlide") {
                var y = document.getElementsByClassName("mySlides2");
                if (n > y.length) { slideIndex = 1 }
                if (n < 1) { slideIndex = y.length }
                for (i = 0; i < y.length; i++) {
                    y[i].style.display = "none";
                }
                y[slideIndex - 1].style.display = "block";
            }

            else if (clicked_id === "thirdSlide") {
                var z = document.getElementsByClassName("mySlides3");
                if (n > z.length) { slideIndex = 1 }
                if (n < 1) { slideIndex = z.length }
                for (i = 0; i < z.length; i++) {
                    z[i].style.display = "none";
                }
                z[slideIndex - 1].style.display = "block";
            }
            else if (clicked_id === "notclicked") {
                var h = document.getElementsByClassName("mySlides");
                var m = document.getElementsByClassName("mySlides2");
                var n = document.getElementsByClassName("mySlides3");

                for (i = 0; i < h.length; i++) {
                    h[i].style.display = "none";
                    m[i].style.display = "none";
                    n[i].style.display = "none";

                }
                h[0].style.display = "block"
                m[0].style.display = "block";
                n[0].style.display = "block";

            }

        }
    </script>

